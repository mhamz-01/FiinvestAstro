---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---
<div class="fixed inset-0 pointer-events-none -z-10">
    <div class="absolute inset-0">
      <div class="animated-lines"></div>
      <div class="diagonal-lines opacity-20">
        <div class="diagonal-line"></div>
        <div class="diagonal-line"></div>
        <div class="diagonal-line"></div>
        <div class="diagonal-line"></div>
      </div>
    </div>
  </div>

<header>
	<section id="navbar" class="bg-black/90 backdrop-blur-sm fixed w-full z-50 top-0 left-0 border-b border-gray-800">
		<nav class="nav-main">
		  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto px-6 py-4">
			<!-- Logo - Moved to Left -->
			<a href="home.html" class="flex items-center space-x-3">
			  <img loading="lazy" src='images/logo/fiinvestTransparentLOgo.png'
				class="h-16 w-auto transition-all duration-300 hover:scale-105" alt="Fiinvest Logo" />
			</a>
	
			<!-- Navigation Menu - Moved to Right -->
			<div class="hidden md:block">
			  <ul class="flex items-center space-x-8">
				<li>
				  <button id="homeBtn" class="nav-btn relative group">
					<span
					  class="block py-2 text-white font-medium hover:text-[#DBAB23] transition-colors duration-300">Home</span>
					<span
					  class="absolute bottom-0 left-0 w-full h-0.5 bg-[#DBAB23] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
				  </button>
				</li>
				<li>
				  <button id="servicesBtn" class="nav-btn relative group">
					<span
					  class="block py-2 text-white font-medium hover:text-[#DBAB23] transition-colors duration-300">Services</span>
					<span
					  class="absolute bottom-0 left-0 w-full h-0.5 bg-[#DBAB23] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
				  </button>
				</li>
				<li>
				  <button id="TeamBtn" class="nav-btn relative group">
					<span
					  class="block py-2 text-white font-medium hover:text-[#DBAB23] transition-colors duration-300">Team</span>
					<span
					  class="absolute bottom-0 left-0 w-full h-0.5 bg-[#DBAB23] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
				  </button>
				</li>
				<li>
				  <button id="aboutBtn" class="nav-btn relative group">
					<span
					  class="block py-2 text-white font-medium hover:text-[#DBAB23] transition-colors duration-300">About</span>
					<span
					  class="absolute bottom-0 left-0 w-full h-0.5 bg-[#DBAB23] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
				  </button>
				</li>
				<li>
				  <button id="contactBtn"
					class="px-6 py-2 bg-[#DBAB23] text-black rounded-full hover:bg-white transition-all duration-300 font-medium">
					Contact
				  </button>
				</li>
			  </ul>
			</div>
	
			<!-- Mobile Menu Button -->
			<div class="flex md:hidden">
			  <button id="mobile-menu-toggle"
				class="p-2 rounded-lg text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-[#DBAB23]">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
				</svg>
			  </button>
			</div>
	
			<!-- Mobile Menu -->
			<div id="navbar-sticky" class="hidden w-full md:hidden mt-4">
			  <ul class="flex flex-col space-y-4 p-4 bg-gray-900/50 backdrop-blur-sm rounded-lg">
				<li>
				  <button id="homeBtnMobile"
					class="w-full text-left px-4 py-2 text-white hover:text-[#DBAB23] transition-colors duration-300">
					Home
				  </button>
				</li>
				<li>
				  <button id="servicesBtnMobile"
					class="w-full text-left px-4 py-2 text-white hover:text-[#DBAB23] transition-colors duration-300">
					Services
				  </button>
				</li>
				<li>
				  <button id="TeamBtnMobile"
					class="w-full text-left px-4 py-2 text-white hover:text-[#DBAB23] transition-colors duration-300">
					Team
				  </button>
				</li>
				<li>
				  <button id="aboutBtnMobile"
					class="w-full text-left px-4 py-2 text-white hover:text-[#DBAB23] transition-colors duration-300">
					About
				  </button>
				</li>
				<li>
				  <button id="contactBtnMobile"
					class="w-full px-4 py-2 bg-[#DBAB23] text-black rounded-lg hover:bg-white transition-all duration-300">
					Contact
				  </button>
				</li>
			  </ul>
			</div>
		  </div>
		</nav>
	  </section>
	  
</header>
<div class="mt-20"></div> <!-- Adjust this as needed to create space below the navbar -->

<style>
	.nav-btn::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #DBAB23;
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.nav-btn:hover::after,
.nav-btn.active::after {
  transform: scaleX(1);
}

@media (max-width: 768px) {
  #navbar-sticky {
    animation: slideDown 0.3s ease-out;
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideDown {
  0% {
      transform: translateY(-50px);
      opacity: 0;
  }
  100% {
      transform: translateY(0);
      opacity: 1;
  }
}

@keyframes slideUp {
  0% {
      transform: translateY(50px);
      opacity: 0;
  }
  100% {
      transform: translateY(0);
      opacity: 1;
  }
}

@keyframes fadeIn {
  0% {
      opacity: 0;
  }
  100% {
      opacity: 1;
  }
}

.animate-slideDown {
  animation: slideDown 1s ease-out forwards;
}

.animate-slideUp {
  animation: slideUp 1s ease-out 0.5s forwards;
}

.animate-fadeIn {
  opacity: 0;
  animation: fadeIn 1s ease-out 1s forwards;
}

.hover\:scale-105:hover {
  transform: scale(1.05);
}
</style>
