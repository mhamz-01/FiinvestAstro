---
import type { AdvantageCardsData } from './advantageCardData';
interface Props extends AdvantageCardsData {}
import '../styles/global.css';
const { sectionTitle, sectionSubtitle, description, cards } = Astro.props;
---

<div class="pb-24 overflow-hidden">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="text-[#DBAB23] font-medium tracking-wider mb-2 block">{sectionTitle}</span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 font-redhat">
        {sectionSubtitle}
      </h2>
      <p class="text-white/70 text-lg max-w-3xl mx-auto">
        {description}
      </p>
    </div>

    <!-- Floating Cards Wrapper -->
    <div class="floating-wrapper space-y-8 md:space-y-12">
      <!-- Row 1 - Moving Right -->
      <div class="floating-cards-right flex gap-6 animate-float-right">
        {cards.slice(0, 3).map((card) => (
          <div class="base-card min-w-[300px] md:min-w-[380px] p-8 flex-1 bg-black rounded-lg border border-gray-800 group hover:border-[#DBAB23] transition-all duration-300">
            <div class="w-12 h-12 bg-[#DBAB23]/10 rounded-full flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform">
              <svg class="w-6 h-6 text-[#DBAB23]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={card.icon} />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-[#DBAB23] transition-colors">{card.title}</h3>
            <p class="text-white/70">{card.description}</p>
          </div>
        ))}
      </div>

      <!-- Row 2 - Moving Left -->
      <div class="floating-cards-left flex gap-6 animate-float-left">
        {cards.slice(3).map((card) => (
          <div class="base-card min-w-[300px] md:min-w-[380px] p-8 flex-1 bg-black rounded-lg border border-gray-800 group hover:border-[#DBAB23] transition-all duration-300">
            <div class="w-12 h-12 bg-[#DBAB23]/10 rounded-full flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform">
              <svg class="w-6 h-6 text-[#DBAB23]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={card.icon} />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-[#DBAB23] transition-colors">{card.title}</h3>
            <p class="text-white/70">{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .floating-wrapper {
    overflow: hidden;
    position: relative;
  }

  .floating-cards-right,
  .floating-cards-left {
    display: flex;
    gap: 1.5rem;
    padding: 1rem 0;
    width: fit-content;
  }

  @keyframes floatRight {
    from { transform: translateX(-30%); }
    to { transform: translateX(20%); }
  }

  @keyframes floatLeft {
    from { transform: translateX(30%); }
    to { transform: translateX(-20%); }
  }

  .animate-float-right {
    animation: floatRight 10s linear infinite;
  }

  .animate-float-left {
    animation: floatLeft 10s linear infinite;
  }

  .base-card {
    backdrop-filter: blur(12px);
    transition: all 0.3s ease;
  }

  .base-card:hover {
    transform: translateY(-4px);
  }
</style>