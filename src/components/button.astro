---
const { title, description, icon, link } = Astro.props;
---

<button class="group w-full text-left" onclick={`window.location.href='${link}'`}>
  <div
    class="relative bg-black/30 backdrop-blur-sm rounded-xl p-8 border border-white/10 transition-all duration-500 hover:border-white/30 hover:transform hover:-translate-y-2">
    <!-- Service Icon -->
    <div
      class="w-20 h-20 bg-gradient-to-br from-[#9A7B1F] to-[#D68D1A] rounded-xl flex items-center justify-center mb-8 transform group-hover:rotate-6 transition-transform duration-500">
      <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>

    <!-- Service Content -->
    <h3 class="text-2xl font-bold text-white mb-4 font-redhat group-hover:text-[#D68D1A] transition-colors">
      {title}
    </h3>
    <p class="text-white/70 leading-relaxed mb-6">
      {description}
    </p>

    <!-- Learn More Link -->
    <div class="flex items-center text-[#D68D1A] group-hover:text-white transition-colors">
      <span class="font-medium">Learn More</span>
      <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-2 transition-transform" fill="none"
        stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </div>

    <!-- Decorative Elements -->
    <div
      class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-[#9A7B1F]/10 to-[#D68D1A]/10 rounded-full blur-xl transform group-hover:scale-150 transition-transform duration-700">
    </div>
  </div>
</button>
