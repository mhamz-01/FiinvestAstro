<div id="profileModal" class="fixed inset-0 z-50 hidden">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/80 backdrop-blur-sm"></div>

    <!-- Modal Content -->
    <div class="relative min-h-screen flex items-center justify-center p-4">
        <div class="relative bg-[#161616] w-full max-w-3xl rounded-2xl shadow-2xl border border-gray-800 overflow-hidden">
            <!-- Close Button -->
            <button id="closeModal"
                class="absolute top-2 right-2 z-50 p-2 bg-black/50 backdrop-blur-sm rounded-full text-white hover:text-[#DBAB23] transition-all duration-300 md:top-4 md:right-4">
                <svg class="w-8 h-8 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <!-- Modal Content Container -->
            <div class="flex flex-col md:flex-row">
                <!-- Left Side - Image -->
                <div class="w-full md:w-2/5">
                    <div class="relative h-[250px] md:h-full">
                        <img loading="lazy" id="modalImage" src="" alt="Team Member" 
                            class="w-full h-full object-cover transform transition-transform duration-700">
                        <div class="absolute inset-0 bg-gradient-to-t from-[#161616] to-transparent md:bg-gradient-to-r"></div>
                    </div>
                </div>

                <!-- Right Side - Content -->
                <div class="w-full md:w-3/5 p-6 md:p-8">
                    <div class="space-y-4 md:space-y-6">
                        <div>
                            <h3 id="modalRole" class="text-[#DBAB23] text-lg md:text-xl font-medium mb-2"></h3>
                            <h2 id="modalName" class="text-3xl md:text-4xl font-bold text-white"></h2>
                        </div>
                        <p id="modalDescription" class="text-white/80 leading-relaxed text-sm md:text-base"></p>
                        <div>
                            <h4 class="text-white font-medium mb-2 md:mb-3">Expertise</h4>
                            <div id="modalSkills" class="flex flex-wrap gap-2"></div>
                        </div>
                        <div class="pt-4 md:pt-6 border-t border-gray-800">
                            <div class="flex space-x-4">
                                <a id="modalLinkedIn" href="#" target="_blank"
                                    class="text-white/60 hover:text-[#DBAB23] transition-colors">
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                                    </svg>
                                </a>
                                <a id="modalTwitter" href="#" target="_blank"
                                    class="text-white/60 hover:text-[#DBAB23] transition-colors">
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script is:inline>
    // Team member data
    const teamData = {
        ceo: {
            role: 'Chief Executive Officer',
            name: 'Fahad Imran',
            description: 'With over 15 years of experience in financial markets, Fahad leads our team with vision and expertise.',
            image: 'images/ceoFinvest.jpg',
            skills: ['Strategic Planning', 'Investment Management', 'Leadership', 'Risk Management'],
            linkedin: 'https://linkedin.com/in/fahad-imran',
            twitter: 'https://twitter.com/fahad_imran'
        },
        'Wealth Manager': {
            role: 'Wealth Manager',
            name: 'Saleem Chaudhry',
            description: 'Expert in wealth management and portfolio optimization with a proven track record.',
            image: 'images/logo/fiinvestTransparentLOgo.png',
            skills: ['Portfolio Management', 'Financial Planning', 'Risk Assessment'],
            linkedin: 'https://linkedin.com/in/saleem-chaudhry',
            twitter: 'https://twitter.com/saleem_chaudhry'
        },
        // Add other team members...
    };

    function openProfileModal(memberId) {
        const modal = document.getElementById('profileModal');
        const member = teamData[memberId];
        
        if (member && modal) {
            // Update modal content
            document.getElementById('modalRole').textContent = member.role;
            document.getElementById('modalName').textContent = member.name;
            document.getElementById('modalDescription').textContent = member.description;
            document.getElementById('modalImage').src = member.image;
            document.getElementById('modalLinkedIn').href = member.linkedin;
            document.getElementById('modalTwitter').href = member.twitter;

            // Update skills
            const skillsContainer = document.getElementById('modalSkills');
            skillsContainer.innerHTML = member.skills.map(skill => 
                `<span class="px-3 py-1 bg-[#DBAB23]/10 text-[#DBAB23] rounded-full text-sm">${skill}</span>`
            ).join('');

            // Show modal
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }
    }

    // Close modal functionality
    document.getElementById('closeModal')?.addEventListener('click', () => {
        const modal = document.getElementById('profileModal');
        modal.classList.add('hidden');
        document.body.style.overflow = '';
    });

    // Close on backdrop click
    document.getElementById('profileModal')?.addEventListener('click', (e) => {
        if (e.target === e.currentTarget) {
            e.currentTarget.classList.add('hidden');
            document.body.style.overflow = '';
        }
    });
</script>