---
import type { TeamSectionData } from './teamMemberData';
interface Props extends TeamSectionData {}

const { sectionTitle, sectionSubtitle, description, teamMembers } = Astro.props;
---

<section id="TeamSection" class="reveal team-section py-24">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-[#DBAB23]/5 to-transparent"></div>
    <div class="absolute inset-0 bg-[url('/images/pattern.png')] opacity-5 animate-float"></div>
  </div>
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <span class="text-[#DBAB23] font-medium tracking-wider mb-2 block">{sectionTitle}</span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 font-redhat">
        Meet the <span class="text-[#DBAB23]">Experts</span> Behind Our Success
      </h2>
      <p class="text-white/70 text-lg max-w-3xl mx-auto">
        {description}
      </p>
    </div>

    <!-- Team Grid Container -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 px-4 max-w-7xl mx-auto">
      {teamMembers.map((member) => (
        <div class="relative group h-[555px] rounded-3xl overflow-hidden transition-transform duration-500 hover:-translate-y-2">
          <!-- Image and Gradient -->
          <div class="absolute inset-0">
            <img 
              loading="lazy" 
              src={member.image} 
              alt={member.name} 
              class="w-full h-full object-cover transform transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent"></div>
          </div>

          <!-- Content Container -->
          <div class="absolute inset-0 flex flex-col justify-end p-8">
            <div>
              <h3 class="text-5xl font-bold text-white mb-2">{member.role}</h3>
              <div class="w-16 h-1 bg-[#DBAB23] mb-4 transition-all duration-500 group-hover:w-24"></div>
              <p class="text-[#DBAB23] font-medium text-2xl mb-6">{member.name}</p>

              <button 
                onclick={`openProfileModal('${member.modalId}')`}
                class="w-full bg-[#DBAB23] text-black rounded-xl py-4 hover:bg-white transition-all duration-300 flex items-center justify-center space-x-2 group/btn"
              >
                <span class="font-medium">Learn More</span>
                <svg 
                  class="w-5 h-5 transform group-hover/btn:translate-x-1 transition-transform" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    stroke-width="2" 
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>