---
import type { ValueCardsData } from './valueCardsData';

interface Props extends ValueCardsData {}

const { sectionTitle, sectionSubtitle, highlightText, cards } = Astro.props;
---

<section id="valuesSection" class="overflow-hidden">
  <!-- Section Header -->
  <div class="text-center mb-16">
    <span class="text-white/80 font-medium tracking-wider mb-2 block">{sectionTitle}</span>
    <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 font-redhat">
      {sectionSubtitle} <span class="text-[#DBAB23]">{highlightText}</span>
    </h2>
  </div>

  <!-- Values Grid -->
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      {cards.map((card) => (
        <div class="group relative">
          <div class="absolute inset-0.5 bg-gradient-to-r from-[#DBAB23] to-orange-500 rounded-lg blur opacity-20 group-hover:opacity-100 transition duration-500">
          </div>
          <div class="relative bg-black p-8 rounded-lg border border-gray-800">
            <div class="flex items-center justify-between mb-6">
              <span class="text-[#DBAB23] text-6xl font-bold opacity-20">{card.number}</span>
              <div class="w-12 h-12 bg-[#DBAB23]/10 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-[#DBAB23]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={card.icon} />
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">{card.title}</h3>
            <p class="text-white/70">{card.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>