---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import '../styles/global.css';
import Button from '../components/button.astro';
import ProfileModal from '../components/profileModal.astro';
import LocationSlider from '../components/location.astro';
import MissionVision from '../components/missionVisionComponent.astro';
import { missionVisionContent } from '../components/missionVisionData';
import AdvantageCards from '../components/advantageCards.astro';
import { advantageCardsContent } from '../components/advantageCardData';
import ValueCards from '../components/valueCards.astro';
import { valueCardsContent } from '../components/valueCardsData';
import TeamSection from '../components/teamMembers.astro';
import { teamContent } from '../components/teamMemberData';
---


<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <div class="relative min-h-screen z-20 overflow-hidden" id="banner">
          <!-- Video Background - Fixed Positioning -->
          <video 
              class="absolute inset-0 w-full h-full object-cover" 
              autoplay 
              muted 
              loop 
              playsinline 
              poster="images/dummy.jpg"
          >
              <source 
                  src="https://ik.imagekit.io/a6bzcaqbn/videos/fiinvestHeroSectionVideo.mp4?updatedAt=1749752938554" 
                  type="video/mp4" 
                  media="(min-width: 768px)"
              />
          </video>
      
          <!-- Enhanced Gradient Overlay -->
          <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/60 to-black/80"></div>
      
          <!-- Centered Content Section - Fixed Width -->
          <div class="relative min-h-screen flex items-center justify-center px-4 md:px-6">
              <div class="text-center w-full max-w-4xl mx-auto">
                  <!-- Content remains the same -->
                  <h1 class="font-redhat font-bold text-white text-4xl sm:text-6xl lg:text-8xl mb-6">
                      <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#DBAB23] to-orange-500">
                          Financial Excellence
                          <br class="hidden sm:block"/>
                          Redefined
                      </span>
                  </h1>
      
                  <h2 class="mt-4 font-redhat text-white text-lg sm:text-xl lg:text-2xl mb-8 mx-auto max-w-3xl leading-relaxed">
                      Your trusted partner in wealth management and investment solutions. 
                      Building prosperous futures through strategic financial planning.
                  </h2>
      
                    <!-- Enhanced CTA Buttons -->
                    <div class="mt-8 flex flex-col sm:flex-row justify-center items-center gap-4">
                      <button 
                          id="bookAppointmentBtn"
                          class="w-full sm:w-auto px-8 py-4 bg-[#DBAB23] text-black rounded-full hover:bg-white transition-all duration-300 font-medium flex items-center justify-center space-x-2 group"
                      >
                          <span>Schedule Consultation</span>
                          <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                          </svg>
                      </button>
                      
                      <button 
                          onclick="window.location.href='services'"
                          class="w-full sm:w-auto px-8 py-4 bg-transparent border-2 border-white text-white rounded-full hover:bg-white hover:text-black transition-all duration-300 font-medium flex items-center justify-center space-x-2 group"
                      >
                          <span>Explore Services</span>
                          <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                          </svg>
                      </button>
                  </div>
      
                  <!-- Added Trust Indicators -->   
              </div>
          </div>
      </div>
         
          <!-- End Of Banner Component -->
  <!-- Add this section after the banner and before the services section -->
  <section class="reveal investment-guidance-section py-24 relative overflow-hidden">
    <!-- Animated Background -->
    <!-- Replace the existing particles-container div with this new lines-container -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-[#DBAB23]/5 to-transparent"></div>
      <div class="absolute inset-0  opacity-5 animate-float"></div>
      <!-- Animated Lines -->
      <div class="lines-container absolute inset-0 overflow-hidden"></div>
    </div>

    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row gap-32 max-w-7xl mx-auto items-center">
        <!-- Left Column - Enhanced Image Gallery -->
        <div class="flex-1 relative w-full min-h-[300px] md:min-h-[500px] animate-fade-in-up perspective-container">
          <!-- Back Image with 3D Effect -->
          <div
            class="absolute right-0 bottom-0 w-[80%] h-[80%] md:w-4/5 md:h-4/5 rounded-xl overflow-hidden shadow-2xl transform translate-x-2 md:translate-x-4 translate-y-2 md:translate-y-4 z-10 hover:rotate-y-12 transition-transform duration-700">
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            <img loading="lazy"  src="https://ik.imagekit.io/a6bzcaqbn/images/ind2-ausfin.jpg?updatedAt=1749752506572" alt="Investment Background"
              class="w-full h-full object-cover rounded-xl transform hover:scale-110 transition-all duration-700 filter brightness-110" />
            <!-- Hover Overlay -->
            <div class="absolute inset-0 bg-[#DBAB23]/20 opacity-0 hover:opacity-100 transition-opacity duration-300">
            </div>
          </div>

          <!-- Front Image with Enhanced Effects -->
          <div
            class="absolute left-0 top-0 w-[80%] h-[80%] md:w-4/5 md:h-4/5 rounded-xl overflow-hidden shadow-2xl z-20 hover:rotate-y-[-12deg] transition-transform duration-700">
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            <img loading="lazy" src="https://ik.imagekit.io/a6bzcaqbn/images/financeBanner.jpg?updatedAt=1755189793880" alt="Investment Foreground"
              class="w-full h-full object-cover rounded-xl transform hover:scale-110 transition-all duration-700 filter brightness-110" />
            <!-- Interactive Overlay -->
            <div
              class="absolute inset-0 bg-gradient-to-r from-[#DBAB23]/20 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300">
            </div>
          </div>

          <!-- Decorative Elements -->
          <div class="absolute -bottom-4 -right-4 w-20 h-20 bg-[#DBAB23]/10 rounded-full blur-xl animate-pulse"></div>
          <div class="absolute -top-4 -left-4 w-20 h-20 bg-[#DBAB23]/10 rounded-full blur-xl animate-pulse delay-300">
          </div>
        </div>

        <!-- Right Column - Enhanced Content -->
        <div class="flex-1 flex flex-col justify-center animate-fade-in-right">
          <div class="relative">
            <!-- Animated Decorative Element -->
            <div class="absolute -left-4 top-0 w-1 h-20 bg-gradient-to-b from-[#DBAB23] to-transparent animate-glow">
            </div>

            <h2
              class="text-4xl md:text-5xl font-bold font-redhat mb-8 text-transparent bg-clip-text bg-gradient-to-r from-[#DBAB23] to-orange-500 animate-gradient relative">
              Your Money Deserves a Strategy, Not a Guess.
              <span class="absolute -bottom-2 left-0 w-1/3 h-1 bg-[#DBAB23]/30 rounded-full animate-width"></span>
            </h2>
          </div>

          <!-- Enhanced Content Card -->
          <div
            class="group bg-[#161616]/80 backdrop-blur-lg p-8 rounded-xl border border-gray-800 hover:border-[#DBAB23] transition-all duration-500 shadow-xl hover:shadow-[#DBAB23]/20 transform hover:-translate-y-1">
            <!-- Enhanced Card Header -->
            <div class="flex items-center space-x-4 mb-6">
              <div
                class="w-12 h-12 rounded-lg bg-[#DBAB23]/10 flex items-center justify-center transform group-hover:rotate-12 transition-transform duration-300">
                <svg class="w-6 h-6 text-[#DBAB23]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 8c1.1 0 2.1.4 2.8 1.2l7.4 7.4-2.8 2.8-7.4-7.4C11.4 11.3 11 10.3 11 9.2c0-1.1.4-2.1 1.2-2.8C12.9 5.6 13.9 5.2 15 5.2s2.1.4 2.8 1.2l.4.4" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold font-redhat text-white group-hover:text-[#DBAB23] transition-colors">
                Expert Financial Solutions
              </h3>
            </div>

            <!-- Enhanced Description -->
            <p class="text-white/80 mb-6 leading-relaxed transform hover:scale-[1.02] transition-transform">
              Navigate the complex world of investments with our expert guidance. We provide comprehensive solutions
              tailored to your financial goals, ensuring sustainable growth and security for your future.
            </p>

            <!-- Enhanced Features List -->
            <ul class="space-y-4 mb-8">
              <li class="flex items-center space-x-3 group/item hover:translate-x-2 transition-transform">
                <span class="w-8 h-8 rounded-lg bg-[#DBAB23]/10 flex items-center justify-center">
                  <svg class="w-4 h-4 text-[#DBAB23] transform group-hover/item:rotate-12 transition-transform"
                    fill="currentColor" viewBox="0 0 20 20">
                    <path
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" />
                  </svg>
                </span>
                <span class="text-white/80 group-hover/item:text-[#DBAB23] transition-colors">Personalized Investment
                  Plans</span>
              </li>
              <!-- Add more features as needed -->
            </ul>

            <!-- Enhanced CTA Button -->
            <button
              class="group relative px-8 py-4 bg-[#DBAB23] text-black rounded-lg overflow-hidden transition-all duration-300 hover:bg-white w-full md:w-auto transform hover:scale-105"
              onclick="window.location.href='services'">
              <span class="relative z-10 font-medium flex items-center justify-center">
                Learn More
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none"
                  stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
              <div
                class="absolute inset-0 bg-white transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left">
              </div>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>



           <!-- SERVICES SECTION FIINVEST START -->

  <section id="servicesSection" class="relative py-32 overflow-hidden">
    <!-- Background with softer gradient -->
    <div class="absolute inset-0">
      <!-- Softer gradient background -->
      <div class="absolute inset-0 bg-gradient-to-r from-[#9A7B1F]/20 to-[#D68D1A]/20"></div>

      <!-- Animated lines container -->
      <div class="services-lines-container absolute inset-0"></div>
    </div>


    <div class="container mx-auto px-4 relative">
      <!-- Enhanced Section Header -->
      <div class="text-center max-w-3xl mx-auto mb-24">
        <span class="text-white/80 font-medium tracking-wider mb-4 block">EXPERTISE & SOLUTIONS</span>
        <h2 class="text-5xl md:text-6xl font-bold text-white mb-8 font-redhat leading-tight">
          Our Professional
          <span class="relative inline-block">
            Services
            <span class="absolute -bottom-2 left-0 w-full h-1 bg-white/20"></span>
          </span>
        </h2>
        <p class="text-white/80 text-lg leading-relaxed">
          Comprehensive financial solutions tailored to your needs, backed by years of expertise and proven success.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
        <!-- Private Equity Service -->
       <Button
       title="Private Equity"
       description="Strategic investments in private companies with high growth potential. Our team identifies and nurtures opportunities, driving value creation through active management and strategic guidance."
       link="services"
       />

        <Button
        title="Private Equity"
        description="Strategic investments in private companies with high growth potential. Our team identifies and nurtures opportunities, driving value creation through active management and strategic guidance."
        link="services"
        />

        <Button
        title="Private Equity"
        description="Strategic investments in private companies with high growth potential. Our team identifies and nurtures opportunities, driving value creation through active management and strategic guidance."
        link="services"
        />
      </div>
    </div>
  </section>


  </div>
  </section>

  <!-- SERVICES SECTION FIINVEST END  -->



   <!-- Team Members Section -->
   <TeamSection {...teamContent} />
  <!-- TEAM MEMBERS SECTION END -->

        
 <!-- Office Location Section -->
 <section class="reveal py-24 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-gradient-to-b from-[#DBAB23]/5 to-transparent pointer-events-none"></div>

    <div class="container mx-auto px-4 relative z-10">
      <!-- Section Header -->
      <div class="max-w-7xl mx-auto mb-16">
        <h2 class="text-6xl md:text-8xl font-bold text-white font-redhat leading-tight">
          Meet Your<br />
          <span class="bg-gradient-to-r from-[#DBAB23] to-orange-500 bg-clip-text text-transparent">Financial
            Advisor</span><br />
          <span class="text-white/80">at Our Offices</span>
        </h2>
      </div>

      <!-- Two Column Layout -->
      <div class="flex flex-col md:flex-row gap-12 max-w-7xl mx-auto relative">
        <!-- Left Column - Contact Info -->
        <div class="flex-1">
          <div
            class="bg-[#161616]/80 backdrop-blur-sm rounded-2xl p-8 h-[400px] transition-opacity duration-500 border border-gray-800 hover:border-[#DBAB23]"
            id="locationContent">
            <!-- Location Content will be dynamically updated -->
          </div>
        </div>

        <!-- Right Column - Office Image -->
        <div class="flex-1">
          <div class="h-[400px] rounded-2xl overflow-hidden transition-opacity duration-500 relative group"
            id="locationImage">
            <!-- Image Container -->
            <div
              class="absolute inset-0 bg-gradient-to-b from-transparent to-black/50 group-hover:opacity-0 transition-opacity duration-300">
            </div>
          </div>
        </div>
      </div>
      <!-- Controls Container -->
      <div class="flex flex-col items-center mt-12 space-y-6 relative z-20">
        <!-- Location Indicators -->
        <div class="flex justify-center space-x-6">
          <button id="indicator0" class="w-16 h-1 rounded-full bg-[#DBAB23] transition-all duration-300"
            data-location="0"></button>
          <button id="indicator1" class="w-16 h-1 rounded-full bg-white/30 transition-all duration-300"
            data-location="1"></button>
          <button id="indicator2" class="w-16 h-1 rounded-full bg-white/30 transition-all duration-300"
            data-location="2"></button>
        </div>

        <!-- Controls -->
        <div class="flex items-center space-x-6">
          <button id="pauseButton"
            class="px-6 py-3 bg-[#DBAB23] text-black rounded-full hover:bg-white transition-colors duration-300 flex items-center space-x-2">
            <span id="pauseIcon" class="block"><i class="fas fa-pause"></i></span>
            <span id="playIcon" class="hidden"><i class="fas fa-play"></i></span>
            <span class="font-medium">Pause</span>
          </button>
          <div class="flex space-x-4">
            <button id="prevLocation"
              class="p-4 border border-white/20 text-white rounded-full hover:bg-[#DBAB23] hover:border-[#DBAB23] hover:text-black transition-all duration-300">
              <i class="fas fa-chevron-left"></i>
            </button>
            <button id="nextLocation"
              class="p-4 border border-white/20 text-white rounded-full hover:bg-[#DBAB23] hover:border-[#DBAB23] hover:text-black transition-all duration-300">
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!--**************************     ABOUT US     **********************************      -->

  <section id="AboutUsPageSection" class="pb-32">
    <div class="container mx-auto px-4 max-w-6xl">
      <!-- Main Heading -->
      <h1 class="text-5xl font-bold font-redhat text-center mb-20 text-white" >About Us</h1>

      <!-- Mission and Vision Cards -->

      <MissionVision {...missionVisionContent} />
     
      <!-- Why Choose Fiinvest Section -->
      <AdvantageCards {...advantageCardsContent} />
    
      <ValueCards {...valueCardsContent} />
    </section>

  <!-- About Us Page Section End  -->


  <section >
    <!-- Contact Form Section -->
    <div class="relative overflow-hidden py-2" id="contactSection">
      <!-- Background Overlay -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 "></div>
      </div>

      <div class="container mx-auto px-4 relative">
        <!-- Section Header -->
        <div class="text-center max-w-3xl mx-auto mb-16">
          <span class="inline-block text-[#DBAB23] font-medium tracking-wider mb-3 animate-fadeIn">GET IN TOUCH</span>
          <h2 class="text-4xl md:text-6xl font-bold text-white mb-6 font-redhat leading-tight animate-slideUp">
            Ready to <span class="text-[#DBAB23]">Transform</span> Your Financial Future?
          </h2>
          <p class="text-white/70 text-lg animate-fadeIn">
            Schedule a consultation with our expert financial advisors and take the first step towards achieving your
            investment goals.
          </p>
        </div>

        <!-- Contact Form Card -->
        <div class="max-w-4xl mx-auto">
          <div class="bg-[#161616]/80 backdrop-blur-lg p-8 md:p-12 rounded-2xl border border-gray-800 shadow-2xl">
            <form class="space-y-8">
              <!-- Name Fields Row -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="relative group">
                  <input type="text" required
                    class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                    id="firstName" placeholder="First Name" />
                  <label for="firstName" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                    peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                    peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                    First Name*
                  </label>
                </div>

                <div class="relative group">
                  <input type="text" required
                    class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                    id="lastName" placeholder="Last Name" />
                  <label for="lastName" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                    peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                    peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                    Last Name*
                  </label>
                </div>
              </div>

              <!-- Contact Info Row -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="relative group">
                  <input type="email" required
                    class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                    id="email" placeholder="Email" />
                  <label for="email" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                    peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                    peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                    Email Address*
                  </label>
                </div>

                <div class="relative group">
                  <input type="tel"
                    class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                    id="phone" placeholder="Phone" />
                  <label for="phone" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                    peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                    peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                    Phone Number
                  </label>
                </div>
              </div>

              <!-- Investment Interest -->
              <div class="relative group">
                <select required
                name="investment-interest"
                id="investmentInterest"
                class="w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all appearance-none cursor-pointer">
                <option value="" disabled selected class="bg-[#161616]">Select Investment Interest*</option>
                <option value="private-equity" class="bg-[#161616]">Private Equity</option>
                <option value="mutual-funds" class="bg-[#161616]">Mutual Funds</option>
                <option value="stocks" class="bg-[#161616]">Stock Trading</option>
            </select>
                <svg class="absolute right-4 top-4 w-4 h-4 text-gray-400 pointer-events-none" fill="none"
                  stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>

              <!-- Investment Amount -->
              <div class="relative group">
                <select required
                name="investment-amount" 
                id="investmentAmount"
                  class="w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all appearance-none cursor-pointer">
                  <option value="" disabled selected class="bg-[#161616]">Investment Amount Range*</option>
                  <option value="3M-5M" class="bg-[#161616]">PKR 3,000,000 - 5,000,000</option>
                  <option value="5M-10M" class="bg-[#161616]">PKR 5,000,000 - 10,000,000</option>
                  <option value="10M-20M" class="bg-[#161616]">PKR 10,000,000 - 20,000,000</option>
                  <option value="20M+" class="bg-[#161616]">PKR 20,000,000+</option>
                </select>
                <svg class="absolute right-4 top-4 w-4 h-4 text-gray-400 pointer-events-none" fill="none"
                  stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>

              <!-- Message -->
              <div class="relative group">
                <textarea required rows="4"
                  class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent resize-none"
                  id="message" placeholder="Message"></textarea>
                <label for="message" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                  peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                  peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                  Your Message*
                </label>
              </div>

              <!-- Privacy Policy Checkbox -->
              <div class="flex items-start space-x-3">
                <input type="checkbox" required id="privacy"
                  class="mt-1.5 h-4 w-4 rounded border-gray-600 text-[#DBAB23] focus:ring-[#DBAB23]" />
                <label for="privacy" class="text-sm text-gray-400">
                  I agree to the <a href="#" class="text-[#DBAB23] hover:underline">Privacy Policy</a> and consent to
                  the processing of my personal data.
                </label>
              </div>

              <!-- Submit Button -->
              <div class="flex justify-center pt-4">
                <button type="submit"
                class="group relative px-8 py-4 bg-[#DBAB23] text-black rounded-lg overflow-hidden transition-all duration-300 hover:bg-white w-full md:w-auto min-w-[200px]">
                <span class="relative z-10 font-medium text-lg flex items-center justify-center">
                    Schedule Consultation
                    <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                </span>
            </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

        
        <Footer />
        <ProfileModal />
        <LocationSlider />
        
    </body>
</html>

<style>
    main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .hero {
        text-align: center;
