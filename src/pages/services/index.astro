---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import Services from '../../components/servicesComponent.astro';
import {servicesContent} from '../../components/serviceData';
import '../../styles/projects.css';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
</head>
    <body>
        
            <div class="fixed inset-0 pointer-events-none -z-10">
              <div class="absolute inset-0">
                <div class="animated-lines"></div>
                <div class="diagonal-lines opacity-20">
                  <div class="diagonal-line"></div>
                  <div class="diagonal-line"></div>
                  <div class="diagonal-line"></div>
                  <div class="diagonal-line"></div>
                </div>
              </div>
            </div>
          
          
        <Header/>
       
       
        <section class="relative min-h-screen animate-fadeIn" id="banner">
          <!-- Background Image -->
          <div 
            class="absolute inset-0 bg-cover bg-center bg-no-repeat z-0"
            style="background-image: url('https://ik.imagekit.io/a6bzcaqbn/images/service_herosection.jpg?updatedAt=1749752507478');"
          ></div>
    
          <!-- Overlay -->
          <div class="absolute inset-0 bg-black/60 z-1"></div>
    
          <!-- Content -->
          <div class="relative z-10 min-h-screen flex items-center justify-center py-20 px-4">
            <div class="text-center w-full max-w-4xl mx-auto">
              <!-- Tagline -->
              <span class="text-[#DBAB23] text-sm md:text-base font-medium tracking-wider mb-4 block animate-fadeIn">
                INNOVATIVE FINANCIAL SERVICES
              </span>
    
              <!-- Main Heading -->
              <div class="typewriter-container mb-6">
                <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold text-white project-title animate-typewriter leading-tight">
                  Empowering Your<br class="hidden sm:block"/>Financial Journey
                </h1>
              </div>
    
              <!-- Subtitle -->
              <h2 class="mt-4 text-base sm:text-lg md:text-2xl text-white/80 project-subtitle animate-slideIn max-w-3xl mx-auto px-4" 
                  style="animation-delay: 1s;">
                Strategic financial solutions tailored to your goals, from private equity to wealth management
              </h2>
              
              <!-- Call to Action Buttons -->
              <div class="mt-8 md:mt-12 flex flex-col sm:flex-row justify-center gap-4 animate-slideIn px-4" 
                   style="animation-delay: 1.5s;">
                <!-- ...existing buttons... -->
                <div class="mt-8 md:mt-12 flex flex-col sm:flex-row justify-center gap-4 animate-slideIn px-4" 
                style="animation-delay: 1.5s;">
             <button id="bookAppointmentBtn"
               class="w-full sm:w-auto px-6 md:px-8 py-3 md:py-4 bg-[#DBAB23] text-black rounded-full hover:bg-white transition-all duration-300 font-medium flex items-center justify-center space-x-2 group"
             >
               <span>Get Started</span>
               <svg class="w-4 h-4 md:w-5 md:h-5 transform group-hover:translate-x-1 transition-transform" 
                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
               </svg>
             </button>
             
             <button onclick="document.getElementById('private-equity').scrollIntoView({behavior: 'smooth'})"
               class="w-full sm:w-auto px-6 md:px-8 py-3 md:py-4 bg-transparent border-2 border-white text-white rounded-full hover:bg-white hover:text-black transition-all duration-300 font-medium flex items-center justify-center space-x-2 group"
             >
               <span>Our Services</span>
               <svg class="w-4 h-4 md:w-5 md:h-5 transform group-hover:translate-x-1 transition-transform" 
                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
               </svg>
             </button>
           </div>
     
              </div>
            </div>
          </div>
        </section>
<!-- END OF BANNER -->




<section class="w-full bg-black/50 backdrop-blur-sm py-16 relative">
  <!-- Change the gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#DBAB23]/30 to-[#DBAB23]/40 pointer-events-none"></div>
  
  <!-- Content container with relative positioning -->
  <div class="container mx-auto px-4 relative z-10">
    <!-- Update text color for better contrast -->
    <h2 class="text-5xl md:text-7xl font-bold text-white text-center font-redhat leading-tight">
      Consultancies Provided<br/>
      <span class="text-[#DBAB23]">by Fiinvest</span>
    </h2>
  </div>
</section>









<Services {...servicesContent} />


<!-- Contact Form Section -->
<section class="bg-black">
<!-- Contact Form Section -->
<div class="relative overflow-hidden py-24" id="contactSection">
  <!-- Background Overlay -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-[#DBAB23]/10 via-black to-black"></div>
  </div>

  <div class="container mx-auto px-4 relative">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block text-[#DBAB23] font-medium tracking-wider mb-3 animate-fadeIn">GET IN TOUCH</span>
      <h2 class="text-4xl md:text-6xl font-bold text-white mb-6 font-redhat leading-tight animate-slideUp">
        Ready to <span class="text-[#DBAB23]">Transform</span> Your Financial Future?
      </h2>
      <p class="text-white/70 text-lg animate-fadeIn">
        Schedule a consultation with our expert financial advisors and take the first step towards achieving your
        investment goals.
      </p>
    </div>

    <!-- Contact Form Card -->
    <div class="max-w-4xl mx-auto">
      <div class="bg-[#161616]/80 backdrop-blur-lg p-8 md:p-12 rounded-2xl border border-gray-800 shadow-2xl">
        <form class="space-y-8">
          <!-- Name Fields Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative group">
              <input type="text" required
                class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                id="firstName" placeholder="First Name" />
              <label for="firstName" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                First Name*
              </label>
            </div>

            <div class="relative group">
              <input type="text" required
                class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                id="lastName" placeholder="Last Name" />
              <label for="lastName" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                Last Name*
              </label>
            </div>
          </div>

          <!-- Contact Info Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative group">
              <input type="email" required
                class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                id="email" placeholder="Email" />
              <label for="email" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                Email Address*
              </label>
            </div>

            <div class="relative group">
              <input type="tel"
                class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                id="phone" placeholder="Phone" />
              <label for="phone" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                Phone Number
              </label>
            </div>
          </div>

          <!-- Investment Interest -->
          <div class="relative group">
            <select required
            name="investment-interest"
            id="investmentInterest"
            class="w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all appearance-none cursor-pointer">
            <option value="" disabled selected class="bg-[#161616]">Select Investment Interest*</option>
            <option value="private-equity" class="bg-[#161616]">Private Equity</option>
            <option value="mutual-funds" class="bg-[#161616]">Mutual Funds</option>
            <option value="stocks" class="bg-[#161616]">Stock Trading</option>
        </select>
            <svg class="absolute right-4 top-4 w-4 h-4 text-gray-400 pointer-events-none" fill="none"
              stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>

          <!-- Investment Amount -->
          <div class="relative group">
            <select required
            name="investment-amount" 
            id="investmentAmount"
              class="w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all appearance-none cursor-pointer">
              <option value="" disabled selected class="bg-[#161616]">Investment Amount Range*</option>
              <option value="3M-5M" class="bg-[#161616]">PKR 3,000,000 - 5,000,000</option>
              <option value="5M-10M" class="bg-[#161616]">PKR 5,000,000 - 10,000,000</option>
              <option value="10M-20M" class="bg-[#161616]">PKR 10,000,000 - 20,000,000</option>
              <option value="20M+" class="bg-[#161616]">PKR 20,000,000+</option>
            </select>
            <svg class="absolute right-4 top-4 w-4 h-4 text-gray-400 pointer-events-none" fill="none"
              stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>

          <!-- Message -->
          <div class="relative group">
            <textarea required rows="4"
              class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent resize-none"
              id="message" placeholder="Message"></textarea>
            <label for="message" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
              peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
              peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
              Your Message*
            </label>
          </div>

          <!-- Privacy Policy Checkbox -->
          <div class="flex items-start space-x-3">
            <input type="checkbox" required id="privacy"
              class="mt-1.5 h-4 w-4 rounded border-gray-600 text-[#DBAB23] focus:ring-[#DBAB23]" />
            <label for="privacy" class="text-sm text-gray-400">
              I agree to the <a href="#" class="text-[#DBAB23] hover:underline">Privacy Policy</a> and consent to
              the processing of my personal data.
            </label>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-center pt-4">
            <button type="submit"
            class="group relative px-8 py-4 bg-[#DBAB23] text-black rounded-lg overflow-hidden transition-all duration-300 hover:bg-white w-full md:w-auto min-w-[200px]">
            <span class="relative z-10 font-medium text-lg flex items-center justify-center">
                Schedule Consultation
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </span>
        </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</section>



        
        <Footer />
    </body>
    
</html>
<style>
  /* Ensure image preload */
  #banner::before {
    content: '';
    position: fixed;
    inset: 0;
    background-image: url('/images/service_herosection.jpg');
    opacity: 0;
    z-index: -1;
  }

  /* Add fade-in animation */
  .animate-fadeIn {
    animation: fadeIn 1s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Prevent background image from disappearing */
  .bg-cover {
    background-size: cover;
    background-attachment: fixed;
    will-change: transform;
  }
</style>