<section class="w-full bg-[#DBAB23] py-16">
<div class="container mx-auto px-4">
  <h2 class="text-5xl md:text-7xl font-bold text-black text-center font-redhat leading-tight">
    Consultancies Provided<br/>
    <span class="text-white">by Fiinvest</span>
  </h2>
</div>
</section>

<!-- Team/Consultancy Section -->
<section class="py-24" >
<div class="container mx-auto px-4" id="private-equity">
  <!-- TeamRow 1 - Private Equity -->
  <div class="flex flex-col md:flex-row items-center gap-16 mb-32">
    <div class="flex-1 order-2 md:order-1">
      <div class="space-y-6 bg-[#161616] backdrop-blur-sm p-8 rounded-2xl border border-gray-800">
        <div class="inline-block">
