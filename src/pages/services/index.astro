<!-- Contact Form Section -->
<section class="bg-black">
<!-- Contact Form Section -->
<div class="relative overflow-hidden py-24" id="contactSection">
  <!-- Background Overlay -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-[#DBAB23]/10 via-black to-black"></div>
  </div>

  <div class="container mx-auto px-4 relative">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block text-[#DBAB23] font-medium tracking-wider mb-3 animate-fadeIn">GET IN TOUCH</span>
      <h2 class="text-4xl md:text-6xl font-bold text-white mb-6 font-redhat leading-tight animate-slideUp">
        Ready to <span class="text-[#DBAB23]">Transform</span> Your Financial Future?
      </h2>
      <p class="text-white/70 text-lg animate-fadeIn">
        Schedule a consultation with our expert financial advisors and take the first step towards achieving your
        investment goals.
      </p>
    </div>

    <!-- Contact Form Card -->
    <div class="max-w-4xl mx-auto">
      <div class="bg-[#161616]/80 backdrop-blur-lg p-8 md:p-12 rounded-2xl border border-gray-800 shadow-2xl">
        <form class="space-y-8">
          <!-- Name Fields Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative group">
              <input type="text" required
                class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                id="firstName" placeholder="First Name" />
              <label for="firstName" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                First Name*
              </label>
            </div>

            <div class="relative group">
              <input type="text" required
                class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                id="lastName" placeholder="Last Name" />
              <label for="lastName" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                Last Name*
              </label>
            </div>
          </div>

          <!-- Contact Info Row -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative group">
              <input type="email" required
                class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                id="email" placeholder="Email" />
              <label for="email" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                Email Address*
              </label>
            </div>

            <div class="relative group">
              <input type="tel"
                class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent"
                id="phone" placeholder="Phone" />
              <label for="phone" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
                peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
                peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
                Phone Number
              </label>
            </div>
          </div>

          <!-- Investment Interest -->
          <div class="relative group">
            <select required
            name="investment-interest"
            id="investmentInterest"
            class="w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all appearance-none cursor-pointer">
            <option value="" disabled selected class="bg-[#161616]">Select Investment Interest*</option>
            <option value="private-equity" class="bg-[#161616]">Private Equity</option>
            <option value="mutual-funds" class="bg-[#161616]">Mutual Funds</option>
            <option value="stocks" class="bg-[#161616]">Stock Trading</option>
        </select>
            <svg class="absolute right-4 top-4 w-4 h-4 text-gray-400 pointer-events-none" fill="none"
              stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>

          <!-- Investment Amount -->
          <div class="relative group">
            <select required
            name="investment-amount" 
            id="investmentAmount"
              class="w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all appearance-none cursor-pointer">
              <option value="" disabled selected class="bg-[#161616]">Investment Amount Range*</option>
              <option value="3M-5M" class="bg-[#161616]">PKR 3,000,000 - 5,000,000</option>
              <option value="5M-10M" class="bg-[#161616]">PKR 5,000,000 - 10,000,000</option>
              <option value="10M-20M" class="bg-[#161616]">PKR 10,000,000 - 20,000,000</option>
              <option value="20M+" class="bg-[#161616]">PKR 20,000,000+</option>
            </select>
            <svg class="absolute right-4 top-4 w-4 h-4 text-gray-400 pointer-events-none" fill="none"
              stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>

          <!-- Message -->
          <div class="relative group">
            <textarea required rows="4"
              class="peer w-full bg-transparent pt-5 pb-2 px-4 text-white border-b-2 border-gray-600 focus:border-[#DBAB23] outline-none transition-all placeholder-transparent resize-none"
              id="message" placeholder="Message"></textarea>
            <label for="message" class="absolute left-4 top-5 text-gray-400 text-sm transition-all duration-300 
              peer-placeholder-shown:text-base peer-placeholder-shown:top-4 
              peer-focus:text-[#DBAB23] peer-focus:text-sm peer-focus:top-0">
              Your Message*
            </label>
          </div>

          <!-- Privacy Policy Checkbox -->
          <div class="flex items-start space-x-3">
            <input type="checkbox" required id="privacy"
              class="mt-1.5 h-4 w-4 rounded border-gray-600 text-[#DBAB23] focus:ring-[#DBAB23]" />
            <label for="privacy" class="text-sm text-gray-400">
              I agree to the <a href="#" class="text-[#DBAB23] hover:underline">Privacy Policy</a> and consent to
              the processing of my personal data.
            </label>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-center pt-4">
            <button type="submit"
            class="group relative px-8 py-4 bg-[#DBAB23] text-black rounded-lg overflow-hidden transition-all duration-300 hover:bg-white w-full md:w-auto min-w-[200px]">
            <span class="relative z-10 font-medium text-lg flex items-center justify-center">
                Schedule Consultation
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </span>
        </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</section>



        
        <Footer />
    </body>
</html>
